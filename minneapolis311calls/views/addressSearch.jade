extends layout

block content
    h1 311 Call Results for Address
    div 
        p You Searched for: #{address}
       

       if (typeof locals.results[0] != 'undefined')
        div
            p Here is what we found!
        div.col-lg-12
        p Property Manager: 
            a#landlordName #{results[0].ContactName}
        p Manager since: #{moment(results[0].IssueDate).format('MM/DD/YYYY')}
        
        div
        table.table.table-striped#results
          thead
            tr
              th #
              th Type
              th Date of Incident
          tbody
            each rrow, i in results
              tr
                td #{i+1}
                td #{results[i].TypeName} 
                td #{moment(results[i].OpenedDateTime).format('dddd, MMMM Do YYYY')}
       else 
         div
         p No 311 calls to this property
    
block script
    script(type='text/javascript').
        $(document).ready(function() {
                $('#landlordName').click(function(){
                   //alert("clicked");
                   var name = $('#landlordName').text();
                   //alert(name);
                   window.location.href = '/landlordSearch/'+name;
                });

                $('#results').DataTable();
            });
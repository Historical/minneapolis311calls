extends layout

block content
  h1= title

  div.col-lg-6.
    <div class="input-group">
      <input id="search-input" type="text" name="typeahead" class="form-control typeahead tt-query"  autocomplete="off" spellcheck="false" placeholder="Search for...">
      <span class="input-group-btn">
       <button id="search" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
      </span>
    </div><!-- /input-group -->

  div.col-lg-12
    p 100 Rental Properties in Minneapolis

  div
  table.table.table-striped
    thead
      tr
        th #
        th Address
        th Manager
    tbody
      each rrow, i in results
        tr
          td #{i+1}
          td #{results[i].Address} 
          td #{results[i].APP_NAME}


block script
    script(type='text/javascript').
        $(document).ready(function() {
                $('#search').click(function(){
                   var search = $('#search-input').val();
                   window.location.href = '/addressSearch/'+search;
                });
                   
                //autocomplete the search box
                $('#search-input').typeahead({
                    name: 'countries',
                    remote: 'http://localhost:1337/search?key=%QUERY',
                    limit: 10
                });
            });

//-
  ul
    - for (var i = 0, len = results.length; i<len; i ++) {
      li Address: #{results[i].Address}
      li Manager: #{results[i].APP_NAME}
      li _______________________________
        
      - }



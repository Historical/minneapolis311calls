extends layout

block content


    div.minneapolisLandscape.
      <div class="searchBox">
        <div class="block"></div>
        <div class="searchBoxText">
          
          <div class="row first">
            <div class="title">#{title} </div>
            <div class="subTitle"> The First Minneapolis Comprehensive Rental Database </div>
          </div> <!-- /row first -->

          <div class="row second">
            <form action="/check" method="POST" role="form">
              <div class="form-group">
                <div class = "col-md-12">  
                  <input id="search-input" type="text" name="typeahead" class="" placeholder="Search by Address" aria-describedby="sizing-addon1">
                  <button id="search" type="submit" class="btn btn-primary">
                      <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  </button>                
                </div>
              
              </div><!-- /form-group -->
            </form><!-- /input-group -->
          </div><!-- /row second -->


          <div class="row third">
            <div class = "col-xs-4">1500 Landlords</div>
            <div class = "col-xs-4">4000 Rental Properties</div>
            <div class = "col-xs-4">23 Million Complaints</div>
          </div> <!--/row third-->
        </div><!--/searchBoxText-->
      </div><!--/searchBox-->


    div.table100
      div.col-lg-12
        p 100 Rental Properties in Minneapolis

      div
      table.table.table-striped
        thead
          tr
            th #
            th Address
            th Manager
        tbody
          each rrow, i in results
            tr
              td #{i+1}
              td #{results[i].Address} 
              td #{results[i].APP_NAME}


block script
    script(type='text/javascript').
        $(document).ready(function() {
                $('#search').click(function(){
                   var search = $('#search-input').val();
                   window.location.href = '/addressSearch/'+search;
                });
                   
                //autocomplete the search box
                $('#search-input').typeahead({
                    name: 'countries',
                    remote: 'http://localhost:1337/search?key=%QUERY',
                    limit: 10
                });
            });

//-
  ul
    - for (var i = 0, len = results.length; i<len; i ++) {
      li Address: #{results[i].Address}
      li Manager: #{results[i].APP_NAME}
      li _______________________________
        
      - }


